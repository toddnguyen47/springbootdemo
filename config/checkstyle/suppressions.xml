<?xml version="1.0"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "https://checkstyle.org/dtds/configuration_1_3.dtd">

<suppressions>
    <!-- Suppress all checks for files in src/test/java/ -->
    <suppress files="[\\\\/]src[\\\\/]test[\\\\/]java[\\\\/].*" checks=".*" />
    <!-- Example: Suppress MagicNumber check for files in src/it/java/ -->
    <suppress files="[\\\\/]src[\\\\/]it[\\\\/]java[\\\\/].*" checks="MagicNumber" />
</suppressions>
